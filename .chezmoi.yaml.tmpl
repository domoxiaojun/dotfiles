sourceDir: {{ .chezmoi.sourceDir | quote }}

data:
  name: "domo"
  email: "{{ .email }}"

  # 终端配置
  terminal:
    ghostty:
      theme: "catppuccin-mocha"
      font: "MesloLGS Nerd Font Mono"
      font_size: 13.5

  # Git 配置
  git:
    user:
      name: "{{ .name }}"
      email: "{{ .email }}"
    delta:
      enabled: {{ if lookPath "delta" }}true{{ else }}false{{ end }}
      side_by_side: true

  # Shell 配置
  shell:
    starship:
      enabled: {{ if lookPath "starship" }}true{{ else }}false{{ end }}
    zsh_plugins:
      - "zsh-syntax-highlighting"
      - "zsh-autosuggestions"

  # 工具配置
  tools:
    lsd: {{ if lookPath "lsd" }}true{{ else }}false{{ end }}
    bat: {{ if lookPath "bat" }}true{{ else }}false{{ end }}
    delta: {{ if lookPath "delta" }}true{{ else }}false{{ end }}
    btop: {{ if lookPath "btop" }}true{{ else }}false{{ end }}
    glow: {{ if lookPath "glow" }}true{{ else }}false{{ end }}
    fx: {{ if lookPath "fx" }}true{{ else }}false{{ end }}
    fzf: {{ if lookPath "fzf" }}true{{ else }}false{{ end }}
